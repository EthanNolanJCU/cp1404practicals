BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: 0.8
            text: '0'
            id: input_value
            font_size: 48
            on_text:
                app.handle_conversion(input_value.text)
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press:
                    app.increment_input(1)
                    app.handle_conversion(input_value.text)
            Button:
                text: 'Down'
                on_press:
                    app.increment_input(-1)
                    app.handle_conversion(input_value.text)
